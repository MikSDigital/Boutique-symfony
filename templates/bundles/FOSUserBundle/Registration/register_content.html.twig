{% trans_default_domain 'FOSUserBundle' %}


<section class="bg0 p-t-104 p-b-116 text-center">
    <div class="container">
        <div class="flex-w flex-tr">
            <div class="size-210 bor10 p-lr-70 p-t-55 p-b-70 p-lr-15-lg w-full-md">

                <h4 class="mtext-105 cl2 txt-center p-b-30">
                    Inscription
                </h4>

{{ form_start(form, {'method': 'post', 'action': path('fos_user_registration_register'), 'attr': {'class': 'fos_user_registration_register'}}) }}

                <div class="bor8 m-b-20 how-pos4-parent">
                     {{ form_widget(form.email, {'attr': {"class": "stext-111 cl2 plh3 size-116 p-l-62 p-r-30"}}) }}
                    <img class="how-pos4 pointer-none" src="{{ asset('images/icons/icon-email.png') }}" alt="ICON">
                </div>
                <div class="bor8 m-b-20 how-pos4-parent">
                     {{ form_widget(form.username, {'attr': {"class": "stext-111 cl2 plh3 size-116 p-l-62 p-r-30"}}) }}
                </div>
                <div class="bor8 m-b-20 how-pos4-parent">
                     {{ form_widget(form.plainPassword.first, {'attr': {"class": "stext-111 cl2 plh3 size-116 p-l-62 p-r-30"}}) }}
                </div>
                <div class="bor8 m-b-20 how-pos4-parent">
                     {{ form_widget(form.plainPassword.second, {'attr': {"class": "stext-111 cl2 plh3 size-116 p-l-62 p-r-30"}}) }}
                </div>
                <div class="bor8 m-b-20 how-pos4-parent">
                     {{ form_widget(form.firstName, {'attr': {"class": "stext-111 cl2 plh3 size-116 p-l-62 p-r-30"}}) }}
                </div>
                <div class="bor8 m-b-20 how-pos4-parent">
                     {{ form_widget(form.lastName, {'attr': {"class": "stext-111 cl2 plh3 size-116 p-l-62 p-r-30"}}) }}
                </div>
                <div class="bor8 m-b-20 how-pos4-parent">
                     {{ form_widget(form.adresses, {'attr': {"class": "stext-111 cl2 plh3 size-116 p-l-62 p-r-30"}}) }}
                </div>
                <div class="bor8 m-b-20 how-pos4-parent">
                     {{ form_widget(form.zipCode, {'attr': {"class": "stext-111 cl2 plh3 size-116 p-l-62 p-r-30"}}) }}
                </div>
                <div class="bor8 m-b-20 how-pos4-parent">
                     {{ form_widget(form.country, {'attr': {"class": "stext-111 cl2 plh3 size-116 p-l-62 p-r-30"}}) }}
                </div>

                <button class="flex-c-m stext-101 cl0 size-121 bg3 bor1 hov-btn3 p-lr-15 trans-04 pointer" type="submit">Inscription</button>
{{ form_end(form) }}

            </div>
        </div>
    </div>
</section>