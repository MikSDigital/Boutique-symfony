{% extends 'back/base.html.twig' %}

{% set title = showProduct.name %}

{% block body %}
    <div class="container">
        <h1>Fiches produits</h1>
        <a href="{{ path('edit-product', {id: showProduct.id}) }}" class="btn btn-success">Modifier le produit</a>
        <br>
        <br>
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Nom : {{ showProduct.name }}</h5>
                <p class="card-text"><strong>Description</strong> : {{ showProduct.description }}</p>
                <p class="card-text"><small class="text-muted">Ajouter le {{ showProduct.createdAt | date("m/d/Y à H:i") }}</small></p>
                <p class="card-text">
                {% if showProduct.isPublished == '1' %}
                   Publier :  <span class="badge badge-success">Oui</span>
                {% elseif showProduct.isPublished == '0' %}
                   Publier :  <span class="badge badge-danger">Non</span>
                {% endif %}
                </p>
                <p class="card-text"><strong>Référence</strong> : {{ showProduct.reference }}</p>
            </div>
        </div>
        <p>images</p>



    <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img class="d-block w-100" src="{{ asset('images/products/'~showProduct.imageName) }}" alt="First slide">
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="{{ asset('images/products/'~showProduct.imageName2) }}" alt="Second slide">
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="{{ asset('images/products/'~showProduct.imageName3) }}" alt="Third slide">
            </div>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
    </div>
{% endblock %}